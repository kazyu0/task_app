<h1>📝 タスクを編集</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <label>タスク名：</label>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <label>説明：</label>
    <%= f.text_area :description %>
  </div>

  <div>
    <label>締め切り：</label>
    <%= f.date_field :due_date %>
  </div>

  <div>
    <label>完了？：</label>
    <%= f.check_box :completed %> <span>完了済み</span>
  </div>

  <button type="submit">💾 更新</button>
<% end %>

<br>
<a href="/">🏠 ホームに戻る</a>